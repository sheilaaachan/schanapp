<div class="row" id="index-pics">
    <% @projects.each do |project| %>
        <div class="index-thumb" >
            <% if project.image.blank? %>
                <%= link_to image_tag('boo.jpg', :class=>"image-thumb"), project %>
            <% else %>
                <%= link_to image_tag(project.image.url(:medium)), project %>
            <% end %>
            <h5><%= project.title.upcase %></h5>
            <p><%= project.description %></p>
            <%= link_to 'Edit', edit_project_path(project) %> | <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
    <% end %>
</div>
<div class="row">
    <%= link_to 'New Project', new_project_path %>
</div>